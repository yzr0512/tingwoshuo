<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cqu.shixun.tingwoshuo.RechargeActivity">
    <RelativeLayout
        android:id="@+id/layout_titlebar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#fcccd2">
        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="marquee"
            android:gravity="center_horizontal|center"
            android:singleLine="true"
            android:text="我的钱包"
            android:textColor="#ffffffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_backward"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="#fcccd2"
            android:drawablePadding="6dp"
            android:ellipsize="end"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="18dp"
             />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_moneybar"
        android:layout_marginTop="52dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/coins_im"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/coins_80"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/coins_im"
            android:layout_alignTop="@+id/coins_im"
            android:layout_marginLeft="20dp"
            android:text="余额"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/money_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/coins_im"
            android:layout_alignBottom="@+id/coins_im"
            android:layout_marginLeft="20dp"
            android:text="99"
            android:textSize="35dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/money_count"
            android:layout_alignBottom="@+id/coins_im"
            android:layout_marginLeft="20dp"
            android:text="个听币"
            android:textSize="25dp"/>
        <View
            android:id="@+id/line_one"
            android:layout_width="match_parent"
            android:layout_below="@+id/money_count"
            android:layout_marginTop="30dp"
            android:layout_height="1dp"
            android:background="#f9c2c2" />
        <Button
            android:id="@+id/tenTB"
            android:layout_width="120dp"
            android:layout_below="@+id/line_one"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/shape3_biankuang"
            android:text="充值10个听币"/>
        <Button
            android:id="@+id/twentyTB"
            android:layout_width="120dp"
            android:layout_below="@+id/line_one"
            android:layout_toRightOf="@+id/tenTB"
            android:layout_marginTop="10dp"
            android:layout_height="120dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/shape3_biankuang"
            android:text="充值20个听币"/>
        <Button
            android:id="@+id/fiftyTB"
            android:layout_width="120dp"
            android:layout_below="@+id/tenTB"
            android:layout_height="120dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape3_biankuang"
            android:text="充值50个听币"/>
        <Button
            android:id="@+id/hundredTB"
            android:layout_width="120dp"
            android:layout_below="@+id/twentyTB"
            android:layout_toRightOf="@+id/fiftyTB"
            android:layout_height="120dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape3_biankuang"
            android:text="充值100个听币"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>