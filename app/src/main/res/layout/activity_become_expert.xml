<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BecomeExpertActivity">
    <RelativeLayout
        android:id="@+id/layout_titlebar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#fcccd2">
        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="marquee"
            android:gravity="center_horizontal|center"
            android:singleLine="true"
            android:text="开通答主"
            android:textColor="#ffffffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_backward"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="#fcccd2"
            android:drawablePadding="6dp"
            android:ellipsize="end"
            android:gravity="center"

            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="18dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_moneybar"
        android:layout_marginTop="52dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/jianjieone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="你的简介"/>
        <EditText
            android:id="@+id/Introduction"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/jianjieone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/jiejietwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Introduction"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="你擅长回答什么问题"/>
        <EditText
            android:id="@+id/Types"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/jiejietwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />
        <LinearLayout
            android:id="@+id/bbbblala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_below="@+id/Types">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常用手机"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/phone"
                android:layout_width="180dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/getinf_bu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                 />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/yanzhengma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_below="@+id/bbbblala">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="　验证码"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/Verification"
                android:layout_width="180dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/certain_bu"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/yanzhengma"
            android:text="确定开通"
            android:layout_centerInParent="true"/>


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>